.PHONY: all clean oclean fclean re

CC = gcc

SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = clean oclean clean re

%.o: %.c
	${CC} -c -o $@ $<

all: ${OBJ}
	${CC} ${OBJ} -o ${NAME}

clean:
	rm -f *~ school

oclean:
	rm -f main.o school.o

fclean:
	rm -f *~ school
	rm -f main.o school.o

re: oclean all
